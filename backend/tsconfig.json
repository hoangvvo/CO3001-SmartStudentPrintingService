{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "lib": ["ES2022"]
  },
  "include": ["./src/**/*", "./tests/**/*"],
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "files": true
  }
}
